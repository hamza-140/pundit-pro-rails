    <!-- <%= image_tag("logo bug.gif", id: "logoGif",alt: "Logo GIF", style: "width: 120px; height: auto; position: absolute; top: 33px; left: 150px; z-index: 999;display:none") %>     -->
    <div class="container">
      <% if notice.present? %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% elsif alert.present? %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= alert %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    <%= yield %>
  </div>

  </body>
</html>
