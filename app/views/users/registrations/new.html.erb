<div class="wrapper">
  <div class="logo">
            <img src="https://www.freepnglogos.com/uploads/bug-png/bug-png-transparent-images-29.png" alt="">
        </div>
  <div class="text-center mt-4 name">
            BugMe
  </div>
  <div class="p-3 mt-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="form-field d-flex align-items-center">
    <i class="bi bi-person"></i>
    <%= f.text_field :name,autofocus: true,placeholder:"Name" %>
  </div>
  <div class="form-field d-flex align-items-center">
    <i class="bi bi-envelope"></i>
    <%= f.email_field :email,placeholder:"Email", autocomplete: "email" %>
  </div>

  <div class="form-field d-flex align-items-center">
    <i class="bi bi-key"></i>
    <%= f.password_field :password ,placeholder:"Password"%>
  </div>

  <div class="form-field d-flex align-items-center">
    <i class="bi bi-key"></i>
    <%= f.password_field :password_confirmation ,placeholder:"Password Confirmation",autocomplete: "new-password" %>
  </div>
  <div class="form-field d-flex align-items-center role-field">
    <i class="bi bi-person-plus"></i>
    <%= f.select :role, options_for_select([[ 'Manager', 0 ], [ 'Quality Assurance', 1 ],['Developer',2]]), { class: "form-select" } %>
  </div>
  
  <div class="actions">
    <%= f.submit "Sign up" ,class:"btn mt-3" %>
  </div>
<% end %>
  </div>
  <div class="text-center fs-6">
    <%= render "users/shared/links"%>
  </div>
</div>