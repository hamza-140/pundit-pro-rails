<h1>Bugs</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Developer</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug.id %></td>
        <td><%= bug.title %></td>
        <td><%= bug.description %></td>
        <td><%= bug.user ? bug.user.email : "Unassigned" %></td>
        <td><%= link_to 'Show', project_bug_path(@project, bug) if policy(bug).show? %></td>
        <td><%= link_to 'Edit', edit_project_bug_path(@project, bug) if policy(bug).edit? %></td>
        <td><%= link_to 'Destroy', project_bug_path(@project, bug), method: :delete, data: { confirm: 'Are you sure?' } if policy(bug).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Bug', new_project_bug_path(@project) %>
<%= link_to 'Back', project_path(@project) %>
